<?xml version="1.0" encoding="UTF-8"?>
<project name="agr" basedir=".">

   <target name="create-alliance-files" >
        <antcall target="create-disease"  />
        <antcall target="create-basic-phenotype" />
        <antcall target="create-basic-wt-expression"/>
        <antcall target="create-allele"/>
        <antcall target="create-bgi"/>
        <antcall target="create-fish"/>
    </target>

    <target name="create-bgi-test" >
        <antcall target="create-basic-gene-info-file-test"  />
    </target>

    <target name="create-fish-test" >
        <antcall target="create-basic-fish-info-file-test"  />
    </target>

    <target name="create-disease-test" >
        <antcall target="create-disease-info-file-test"  />
    </target>

    <target name="create-phenotype-test" >
        <antcall target="create-phenotype-info-file-test"  />
    </target>

    <target name="create-basic-wt-expression-test" >
        <antcall target="create-basic-wt-expression-info-file-test"  />
    </target>

    <target name="agr-test" >
        <antcall target="create-basic-gene-info-file-test"  />
    </target>

    <target name="create-bgi" >
        <antcall target="create-basic-gene-info-file"  />
    </target>

    <target name="create-fish" >
        <antcall target="create-basic-fish-info-file"  />
    </target>

    <target name="create-allele" >
        <antcall target="create-basic-allele-info-file"  />
    </target>

    <target name="create-disease" >
        <antcall target="create-disease-info-file"  />
    </target>

    <target name="create-basic-phenotype" >
        <antcall target="create-basic-phenotype-info-file"  />
    </target>

    <target name="create-basic-wt-expression" >
        <antcall target="create-basic-wt-expression-info-file"  />
    </target>

    <target name="create-basic-gene-info-file" depends=""
            description="Tests to make sure that the system is alive and working properly.">
        <echo message="Check entity changes"/>
        <java classname="org.zfin.marker.agr.BasicGeneInfo" fork="yes" classpathref="extended.classpath"
              failonerror="true" maxmemory="6G">
            <classpath refid="classpath"/>
        </java>
    </target>

    <target name="create-basic-fish-info-file" depends=""
            description="Tests to make sure that the system is alive and working properly.">
        <echo message="Check entity changes"/>
        <java classname="org.zfin.marker.agr.BasicFishInfo" fork="yes" classpathref="extended.classpath"
              failonerror="true" maxmemory="6G">
            <classpath refid="classpath"/>
        </java>
    </target>

    <target name="create-basic-allele-info-file" depends=""
            description="Tests to make sure that the system is alive and working properly.">
        <echo message="Check entity changes"/>
        <java classname="org.zfin.marker.agr.BasicAlleleInfo" fork="yes" classpathref="extended.classpath"
              failonerror="true" maxmemory="6G">
            <classpath refid="classpath"/>
        </java>
    </target>
    <target name="create-gpi-file" depends=""
            description="Generates tab delimited file for GO/Noctua">
        <echo message="Check entity changes"/>
        <java classname="org.zfin.marker.GPIFile" classpathref="extended.classpath"
              failonerror="true" maxmemory="6G" fork="yes">
            <classpath refid="classpath"/>
        </java>
    </target>
    <target name="create-disease-info-file" depends=""
            description="Tests to make sure that the system is alive and working properly.">
        <echo message="Check entity changes"/>
        <java classname="org.zfin.marker.agr.DiseaseInfo" fork="yes" classpathref="extended.classpath"
              failonerror="true" maxmemory="2048M">
            <classpath refid="classpath"/>
        </java>
    </target>


    <target name="create-basic-phenotype-info-file" depends=""
            description="Tests to make sure that the system is alive and working properly.">
        <echo message="Check entity changes"/>
        <java classname="org.zfin.marker.agr.BasicPhenotypeInfo" fork="yes" classpathref="extended.classpath"
              failonerror="true" maxmemory="2048M">
            <classpath refid="classpath"/>
        </java>
    </target>

    <target name="create-basic-wt-expression-info-file" depends=""
            description="Tests to make sure that the system is alive and working properly.">
        <echo message="Check entity changes"/>
        <java classname="org.zfin.marker.agr.BasicExpressionInfo" fork="yes" classpathref="extended.classpath"
              failonerror="true" maxmemory="6G">
            <classpath refid="classpath"/>
        </java>
    </target>


    <target name="create-disease-info-file-test" depends=""
            description="Tests to make sure that the system is alive and working properly.">
        <echo message="Check entity changes"/>
        <java classname="org.zfin.marker.agr.DiseaseInfo" fork="yes" classpathref="extended.classpath"
              failonerror="true" maxmemory="2048M">
            <classpath refid="classpath"/>
            <arg value="100"/>
        </java>
    </target>

    <target name="create-basic-gene-info-file-test" depends=""
            description="Tests to make sure that the system is alive and working properly.">
        <echo message="Check entity changes"/>
        <java classname="org.zfin.marker.agr.BasicGeneInfo" fork="yes" classpathref="extended.classpath"
              failonerror="true" maxmemory="1024M">
            <classpath refid="classpath"/>
            <arg value="5"/>
        </java>
    </target>

</project>
