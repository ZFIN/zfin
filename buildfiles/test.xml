    <macrodef name="runTest">
        <attribute name="verbose"/>
        <attribute name="testClass"/>
        <attribute name="outFile"/>
        <sequential>
            <junit fork="false"
                   printsummary="yes"
                   haltonfailure="yes"
                   haltonerror="yes"
                   showoutput="@{verbose}"
                   maxmemory="2024m"
                    >
                <classpath refid="extended.classpath"/>
<!--
                <formatter classname="org.zfin.util.JunitFormatter" usefile="false" />
-->
                <test name="@{testClass}" todir="${test.reports.dir}" outfile="@{outFile}">
                    <formatter type="brief"/>
                    <formatter type="xml"/>
                </test>
            </junit>
        </sequential>
    </macrodef>

    <macrodef name="runDBTest">
        <attribute name="verbose"/>
        <attribute name="testClass"/>
        <attribute name="outFile"/>
        <sequential>
            <junit fork="true"
                   printsummary="yes"
                   haltonfailure="yes"
                   haltonerror="yes"
                   showoutput="@{verbose}"
                   maxmemory="2024m"
		   includeantruntime="false"
                    >
                <classpath refid="extended.classpath"/>
                <sysproperty key="log4j.configuration" value="${web-inf.dir}/log4j.xml"/>
                <jvmarg value="-Xmx1024m"/>
                <jvmarg value="-Xverify:none"/>
                <test name="@{testClass}" todir="${test.reports.dir}" outfile="@{outFile}">
                    <formatter type="brief"/>
                    <formatter type="xml"/>
                </test>
            </junit>
        </sequential>
    </macrodef>

