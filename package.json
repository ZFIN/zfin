{
  "name": "zfin-www",
  "version": "1.0.0",
  "description": "ZFIN The Zebrafish Information Network",
  "repository": "file:///net/filer.zfin.org/vol/central/Vault/git/ZFIN_WWW",
  "license": "UNLICENSED",
  "devDependencies": {
    "hashmark": "^5.0.0",
    "@songkick/replaceinfiles": "^1.1.4"
  },
  "scripts": {
    "build:js:map": "hashmark -l 8 -c 'home/' 'javascript/**/*.js' 'dist/{dir}/{name}.{hash}{ext}' -m '../assets.json' -s",
    "build:js:cgi": "replaceinfiles -r assets.json -s 'cgi-bin/**/*.cgi' -S",
    "build:js:jsp": "replaceinfiles -r assets.json -s 'home/WEB-INF/{jsp,jsp-include,tags,tiles}/**/*.{jsp,tag}' -S",
    "build:js:apg": "replaceinfiles -r assets.json -s 'home/ZFIN/**/*.apg' -S",
    "build:js:html": "replaceinfiles -r assets.json -s 'home/{ZFIN/misc_html/*,warranty,zf_info/**/*}.html' -S",
    "build:js": "npm run build:js:map && npm run build:js:cgi && npm run build:js:jsp && npm run build:js:apg && npm run build:js:html"
  }
}
