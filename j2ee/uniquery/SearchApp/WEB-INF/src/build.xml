<?xml version="1.0" encoding="UTF-8"?>


<project name="SearchApp" default="compile">

	<!-- directories, webinf.dir passed in as a parameter -->
	<property name="src.dir" value="." />
	<property name="lib.dir" value="${webinf.dir}/lib" />
	<property name="build.dir" value="${webinf.dir}/classes" />

	<!-- classpaths -->
	<path id="default_classpath">
        <pathelement location="${build.dir}" />
        <pathelement location="${lib.dir}/commons-lang-2.3.jar" />
        <pathelement location="${lib.dir}/highlighter.jar" />
        <pathelement location="${lib.dir}/lucene-core-2.3.1.jar" />
        <pathelement location="${lib.dir}/UniquerySupport.jar" />
        <pathelement location="/private/apps/tomcat/common/lib/ifxjdbc.jar" />
        <pathelement location="/private/apps/tomcat/common/lib/servlet-api.jar" />
	</path>

	<target name="init">
		<tstamp />
	</target>

	<target name="clobber" depends="init" description="deletes generated files">
		<delete dir="${build.dir}" />
	</target>

	<target name="compile" depends="init" description="compiles code">
		<mkdir dir="${build.dir}" />
		<javac destdir="${build.dir}" debug="on" deprecation="off" optimize="on" target="1.5">
			<src path="${src.dir}" />
			<classpath refid="default_classpath" />
		</javac>
	</target>

</project>
