<?xml version="1.0" encoding="UTF-8"?>


<project name="IndexApp" default="compile">

	<!-- directories, base.dir passed in -->
	<property name="src.dir" value="." />
	<property name="lib.dir" value="${base.dir}/lib" />
	<property name="config.dir" value="${base.dir}/etc" />
	<property name="build.dir" value="${base.dir}/classes" />
	<property name="dist.dir" value="${base.dir}/dist" />


	<!-- files -->
	<property name="dist.jar" value="${dist.dir}/${ant.project.name}.jar" />


	<!-- classpaths -->
	<path id="default_classpath">
        <pathelement location="${build.dir}" />
        <pathelement location="${config.dir}" />
        <pathelement location="${lib.dir}/commons-lang-2.3.jar" />
        <pathelement location="${lib.dir}/cvu.jar" />
        <pathelement location="${lib.dir}/lucene-core-2.3.1.jar" />
        <pathelement location="${lib.dir}/UniquerySupport.jar" />
	</path>




	<target name="init">
		<tstamp />
	</target>




	<target name="clobber" depends="init" description="deletes generated files">
		<delete dir="${build.dir}" />
		<delete dir="${dist.dir}" />
	</target>


<!-- Eventually drop debug and optimize on -->

	<target name="compile" depends="init" description="compiles code">
		<mkdir dir="${build.dir}" />
		<javac destdir="${build.dir}" debug="on" deprecation="off" optimize="off" target="1.5">
			<src path="${src.dir}" />
			<classpath refid="default_classpath" />
		</javac>
	</target>

<!-- Shad says this can probably come out -->
	<target name="run" depends="init,compile" description="runs spider using default config file">
        <java classname="org.zfin.index.Spider" fork="yes">
            <classpath refid="default_classpath" />
            <arg value="-d" />
            <arg value="${base.dir}/new-index" />
            <arg value="-u" />
            <arg value="${config.dir}/searchurls.txt" />
            <arg value="-e" />
            <arg value="${config.dir}/excludeurls.txt" />
            <arg value="-c" />
            <arg value="${config.dir}/crawlonlyurls.txt" />
            <arg value="-t" />
            <arg value="2" />
            <arg value="-l" />
            <arg value="${base.dir}/logs" />
            <arg value="-v" />
        </java>
    </target>

</project>
