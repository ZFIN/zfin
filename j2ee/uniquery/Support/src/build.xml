<?xml version="1.0" encoding="UTF-8"?>


<project name="UniquerySupport" default="compile">

    <!-- directories, base.dir passed in -->
    <property name="src.dir" value="." />
    <property name="lib.dir" value="${base.dir}/lib" />
    <property name="build.dir" value="${base.dir}/classes" />
    <property name="dist.dir" value="${lib.dir}" />


    <!-- files -->
    <property name="dist.jar" value="${dist.dir}/${ant.project.name}.jar" />


    <!-- classpaths -->
    <path id="default_classpath">
        <pathelement location="${build.dir}" />
        <pathelement location="${lib.dir}/commons-lang-2.3.jar" />
        <pathelement location="${lib.dir}/lucene-core-2.3.1.jar" />
    </path>




    <target name="init">
        <tstamp />
    </target>




    <target name="clobber" depends="init" description="deletes generated files">
        <delete dir="${build.dir}" />
        <delete dir="${dist.jar}" />
    </target>




    <target name="compile" depends="init" description="compiles code and generates jar file">
        <mkdir dir="${build.dir}" />
        <javac destdir="${build.dir}" debug="on" deprecation="off" optimize="off" target="1.5">
            <src path="${src.dir}" />
            <classpath refid="default_classpath" />
        </javac>
        <jar jarfile="${dist.jar}">
            <fileset dir="${build.dir}">
                <include name="**/*.class" />
            </fileset>
        </jar> 
    </target>
    
    
</project>
