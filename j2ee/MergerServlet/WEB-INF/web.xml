<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app 
    xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java/sun.com/xml/ns/j2ee web-app_2_4.xsd"
    version="2.4">

    <servlet>
        <servlet-name>MergerServletPage</servlet-name>
	<servlet-class>org.zfin.mergerservlet.MergerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MergerServletPage</servlet-name>
        <url-pattern>/MergerServlet</url-pattern>
    </servlet-mapping>

    <!-- Use JDBC Connection Pooling -->
    <Context> 
        <ResourceLink global="jdbc/zfinDatabase" name="jdbc/zfinDatabase" 
	    type="javax.sql.DataSource" />
    </Context>

    <resource-ref>
        <res-ref-name>jdbc/zfinDatabase</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>


