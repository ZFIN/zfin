<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.jboss.org/dtd/hibernate/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.zfin.mutant">

    <class name="ConstructSearch" table="construct_search">

        <id name="ID">
            <column name="cons_pk_id" not-null="true"/>
            <generator class="identity"/>
        </id>

        <property name="constructID" column="cons_construct_zdb_id"/>
        <property name="constructName" column="cons_all_names"/>
        <property name="constructAbbrev" column="cons_abbrev"/>

    </class>

    <class name="ConstructGeneFeature" table="construct_gene_feature_result_View">
        <cache usage="read-only"/>
        <id name="ID">
            <column name="cgfrv_pk_id" not-null="true"/>
            <generator class="identity"/>
        </id>

        <many-to-one name="constructSearch" column="cgfrv_cs_id"/>


        <component name="feature">
            <property name="ID" column="cgfrv_feature_zdb_id"/>
            <property name="name" column="cgfrv_feature_abbrev"/>
            <property name="nameOrder" column="cgfrv_feature_order"/>
        </component>
        <component name="alleleGene">
            <property name="ID" column="cgfrv_allele_gene_zdb_id"/>
            <property name="name" column="cgfrv_allele_gene_abbrev"/>
            <property name="nameOrder" column="cgfrv_allele_gene_order"/>
            <!--<property name="nameOrder" column="gfrv_construct_abbrev_order"/>-->
        </component>
        <property name="lab" column="cgfrv_available"/>
    </class>

</hibernate-mapping>
