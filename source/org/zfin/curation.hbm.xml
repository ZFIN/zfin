<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.jboss.org/dtd/hibernate/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.zfin.curation">

    <typedef class="org.zfin.framework.StringEnumValueUserType" name="curationTopicType">
        <param name="enumClassname">org.zfin.curation.Curation$Topic</param>
    </typedef>

    <class name="org.zfin.curation.PublicationNote" table="publication_note">
        <id name="zdbID" type="string">
            <column name="pnote_zdb_id" not-null="true"/>
            <generator class="org.zfin.database.ZdbIdGenerator">
                <param name="type">PNOTE</param>
                <param name="insertActiveData">true</param>
            </generator>
        </id>
        <many-to-one name="curator" column="pnote_curator_zdb_id" class="org.zfin.profile.Person"/>
        <property name="date" column="pnote_date"/>
        <many-to-one name="publication" column="pnote_pub_zdb_id" class="org.zfin.publication.Publication"/>
        <property name="text" column="pnote_text"/>
    </class>

    <class name="org.zfin.curation.Curation" table="curation">
        <id name="zdbID" type="string">
            <column name="cur_zdb_id" not-null="true"/>
            <generator class="org.zfin.database.ZdbIdGenerator">
                <param name="type">CUR</param>
                <param name="insertActiveData">true</param>
            </generator>
        </id>

        <many-to-one name="publication" column="cur_pub_zdb_id" class="org.zfin.publication.Publication"/>
        <many-to-one name="curator" column="cur_curator_zdb_id" class="org.zfin.profile.Person"/>
        <property name="topic" column="cur_topic" type="curationTopicType"/>
        <property name="dataFound" column="cur_data_found"/>
        <property name="entryDate" column="cur_entry_date"/>
        <property name="closedDate" column="cur_closed_date"/>
        <property name="openedDate" column="cur_opened_date"/>
    </class>

    <class name="org.zfin.curation.Correspondence" table="publication_correspondence">
        <id name="id" type="long">
            <column name="pubcorr_pk_id" not-null="true"/>
            <generator class="identity"/>
        </id>

        <many-to-one name="publication" column="pubcorr_pub_zdb_id" class="org.zfin.publication.Publication"/>
        <many-to-one name="curator" column="pubcorr_curator_zdb_id" class="org.zfin.profile.Person"/>
        <property name="contactedDate" column="pubcorr_contacted_date"/>
        <property name="respondedDate" column="pubcorr_responded_date"/>
        <property name="giveUpDate" column="pubcorr_gave_up_date"/>
    </class>

</hibernate-mapping>
