<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:zfin='urn:import:org.zfin.gwt.root.ui'
        >

    <g:FlowPanel>
        <g:VerticalPanel spacing="10" title="Disease">
            <g:HorizontalPanel>
                <g:Label text="FISH CONSTRUCTION:" styleName="bold"/>
            </g:HorizontalPanel>
            <zfin:ZfinFlexTable ui:field="constructionTable" numberOfColumns="2" styleName="searchresults"
                                cellSpacing="5" cellPadding="5" />
            <g:HorizontalPanel spacing="10">
                <g:Button text="Create Fish" ui:field="createFishButton"/>
                <zfin:SimpleErrorElement ui:field="errorLabel"/>
            </g:HorizontalPanel>
            <g:Image ui:field="loadingImage" url="/images/ajax-loader.gif"/>
            <g:HorizontalPanel spacing="0">
                <g:Label text="FISH LIST" styleName="summaryTitle"/>
                <g:Label ui:field="noneDefined" text="None defined" styleName="no-data-tag"/>
            </g:HorizontalPanel>
            <zfin:ZfinFlexTable ui:field="fishListTable" numberOfColumns="3" styleName="searchresults groupstripes"
                                cellSpacing="5" cellPadding="5" />
        </g:VerticalPanel>
    </g:FlowPanel>
</ui:UiBinder>
