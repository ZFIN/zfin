   <g:FlowPanel>
        <g:HorizontalPanel>
            <g:Label text="Experiments:" styleName="bold"/>
        </g:HorizontalPanel>
        <g:Grid ui:field='dataTable' cellSpacing='10' styleName="searchresults groupstripes">
            <g:row styleName="table-header">
                <g:customCell>
                    <g:Label text="" styleName="bold" horizontalAlignment="left"/>
                </g:customCell>
                <g:customCell>
                    <g:Label text="Experiment Name" styleName="bold" horizontalAlignment="left"/>
                </g:customCell>

                <g:customCell>
                    <g:Label text="Delete" styleName="bold" horizontalAlignment="left"/>
                </g:customCell>
            </g:row>
        </g:Grid>
       <g:Grid cellSpacing='10' styleName="searchresults groupstripes">
           <g:row>
               <g:cell/>
               <g:customCell>
                   <g:FlowPanel>

                       <g:HTML>
                           <p/>
                       </g:HTML>
                       <g:HorizontalPanel addStyleNames="vertical-margin">
                           <g:Button ui:field="addExperimentButton" text="Add"
                                     addStyleNames="btn btn-primary" />
                           <g:TextBox ui:field="experimentNameAddBox"/>
                       </g:HorizontalPanel>
                   </g:FlowPanel>
               </g:customCell>

           </g:row>
       </g:Grid>
