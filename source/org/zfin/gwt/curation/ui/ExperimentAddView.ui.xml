<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:zfin='urn:import:org.zfin.gwt.root.ui'
        xmlns:zfin-mod='urn:import:org.zfin.gwt.curation.ui'
        >

   <g:FlowPanel>
        <g:HorizontalPanel>
            <g:Label text="Conditions:" styleName="bold"/>
        </g:HorizontalPanel>
        <g:Grid ui:field='dataTable' cellSpacing='10' styleName="searchresults groupstripes">
            <g:row styleName="table-header">
                <g:customCell>
                    <g:Label text="" styleName="bold" horizontalAlignment="left"/>
                </g:customCell>
                <g:customCell>
                    <g:Label text="Condition Name" styleName="bold" horizontalAlignment="left"/>
                </g:customCell>

                <g:customCell>
                    <g:Label text="Delete" styleName="bold" horizontalAlignment="left"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Button ui:field="updateConditionNameButton" text="Update"/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="conditionNameBox"/>
                </g:customCell>

                <g:customCell>
                    <g:Button ui:field="deleteConditionButton" text="Delete"/>
                </g:customCell>
            </g:row>
            <g:row>
                <g:customCell>
                    <g:Button ui:field="addConditionNameButton" text="Add"/>
                </g:customCell>
                <g:customCell>
                    <g:TextBox ui:field="conditionNameAddBox"/>
                </g:customCell>
            </g:row>
        </g:Grid>
        <zfin:SimpleErrorElement ui:field="errorLabel"/>
        <g:Image ui:field="loadingImage" url="/images/ajax-loader.gif" visible="false"/>
    </g:FlowPanel>
</ui:UiBinder>
