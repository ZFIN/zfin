<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:zfin='urn:import:org.zfin.gwt.root.ui'
        >

    <g:FlowPanel>
        <g:HorizontalPanel>
            <g:Label text="FISH CONSTRUCTION: &nbsp;" styleName="bold"/>
            <g:Hyperlink text="Show" ui:field="showHideConstruction"/>
        </g:HorizontalPanel>
        <g:VerticalPanel ui:field="constructionPanel" visible="false">
            <g:HTMLPanel tag="table" styleName="searchresults">
                <tr>
                    <th><g:InlineLabel>Genotype</g:InlineLabel></th>
                    <th><g:InlineLabel>ST Reagents</g:InlineLabel></th>
                </tr>
                <tr>
                    <td style="vertical-align: middle;"><g:InlineHTML ui:field="genotypeName"/></td>
                    <td><g:HorizontalPanel ui:field="sTRPanel"/></td>
                </tr>
                <tr>
                    <td><g:ListBox ui:field="genotypeSelectionBox"/></td>
                    <td><g:ListBox ui:field="strSelectionBox"/><g:Button ui:field="addStrButton">Add STR</g:Button>
                    </td>
                </tr>
            </g:HTMLPanel>
            <g:HorizontalPanel spacing="10">
                <g:Button text="Create Fish" ui:field="createFishButton"/>
                <zfin:SimpleErrorElement ui:field="errorLabel"/>
            </g:HorizontalPanel>
            <g:Image ui:field="loadingImage" url="/images/ajax-loader.gif" visible="false"/>
        </g:VerticalPanel>
    </g:FlowPanel>
</ui:UiBinder>
