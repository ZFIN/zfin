<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:zfin='urn:import:org.zfin.gwt.root.ui'
        >

    <g:FlowPanel>
        <g:HorizontalPanel>
            <g:Label text="GENOTYPE CONSTRUCTION:&nbsp;" styleName="bold"/>
            <g:Hyperlink text="Show" ui:field="showHideSection"/>
        </g:HorizontalPanel>
        <g:VerticalPanel ui:field="genotypeConstructionPanel" addStyleNames="newgroup oddgroup odd experiment-row"
                         spacing="5" visible="false">
            <zfin:ZfinFlexTable ui:field="genotypeConstructionTable" numberOfColumns="2" styleName="searchresults"
                                cellSpacing="5" cellPadding="5"/>
            <g:HTMLPanel tag="table" styleName="searchresults">
                <tr>
                    <td class="bold" style="white-space: nowrap;" width="15%">
                        <g:InlineLabel>Set Zygosities</g:InlineLabel>
                    </td>
                    <td class="bold">
                        <g:Button ui:field="buttonUUU">U,U,U</g:Button>
                        <g:Button ui:field="button2UU">2,U,U</g:Button>
                        <g:Button ui:field="button211">2,1,1</g:Button>
                    </td>
                </tr>
                <tr>
                    <td class="bold">
                        <g:InlineLabel>Background</g:InlineLabel>
                    </td>
                    <td class="bold">
                        <g:ListBox ui:field="backgroundListBox"/>
                    </td>
                </tr>
            </g:HTMLPanel>
            <g:Label text="New Genotype" styleName="bold" horizontalAlignment="left"/>
            <g:HorizontalPanel>
                <g:Label text="&nbsp;&nbsp;&nbsp;"/>
                <g:HTMLPanel tag="table" styleName="searchresults">
                    <tr>
                        <th>
                            <g:InlineLabel>Display Name</g:InlineLabel>
                        </th>
                        <td>
                            <g:InlineHTML ui:field="genotypeDisplayName"/>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <g:InlineLabel>Handle</g:InlineLabel>
                        </th>
                        <td>
                            <g:Label ui:field="genotypeHandle"/>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            <g:InlineLabel>Nickname</g:InlineLabel>
                        </th>
                        <td>
                            <g:TextBox ui:field="genotypeNickname"/>
                        </td>
                    </tr>
                </g:HTMLPanel>
            </g:HorizontalPanel>
            <g:HorizontalPanel>
                <g:Button ui:field="createGenotypeButton" text="Create Genotype"/>
                <g:Button ui:field="resetButton" text="Reset"/>
            </g:HorizontalPanel>
            <zfin:SimpleErrorElement ui:field="errorLabel"/>
            <g:Image ui:field="loadingImage" url="/images/ajax-loader.gif" visible="false"/>
        </g:VerticalPanel>
    </g:FlowPanel>
</ui:UiBinder>
