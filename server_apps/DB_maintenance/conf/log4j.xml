<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/' debug="false">

    <appender name="queryAppender" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="File" value="query.log"/>
        <param name="Append" value="false"/>
        <param name="DatePattern" value="'.'yyyy-MM"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%r - %p: %m%n"/>
        </layout>
    </appender>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d - %p: %m%n"/>
        </layout>
    </appender>


    <category name="org.hibernate" additivity="true">
        <priority value="warn"/>
    </category>

    <category name="org.zfin" additivity="true">
        <priority value="warn"/>
    </category>

    <category name="org.zfin.ontology.datatransfer" additivity="true">
        <priority value="info"/>
        <appender-ref ref="queryAppender"/>
    </category>

    <root>
        <priority value="warn"/>
        <appender-ref ref="console"/>
        <appender-ref ref="queryAppender"/>
    </root>
</log4j:configuration>
