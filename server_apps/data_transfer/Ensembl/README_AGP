--- just checking what accessions are associated with DNA clones
select dblink_fdbcont_zdb_id, count(*)
 from marker join db_link on mrkr_zdb_id == dblink_linked_recid
 where mrkr_type in ("BAC","PAC","FOZMID")
 group by 1
