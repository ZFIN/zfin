setenv TARGETFTPROOT "/research/zcentral/ftp"
setenv TARGETROOT "/research/zcentral/www_homes/watson"
setenv USER "informix"


# Define SVNROOT
if("${INFORMIXSERVER}" == "wildtype") then
    if ("`/local/bin/hostname`" != "helix") then
      echo "WARNING: Not currently logged in to helix."
    endif
    setenv SVNROOT file:///research/zcentral/Vault/SVNROOT ;
    if (! $?PREINFORMIXPATH) then
        setenv PREINFORMIXPATH ${PATH}
    endif

    # now that commons exists on helix, include it as well.
    setenv PATH /private/bin:${INFORMIXDIR}/bin:/private/ZfinLinks/Commons/bin:${PREINFORMIXPATH}
    if ($?PREINFORMIX_LD_PATH) then
        setenv LD_LIBRARY_PATH ${PREINFORMIX_LD_PATH}:${INFORMIXDIR}/lib:${INFORMIXDIR}/lib/esql
    else
        setenv LD_LIBRARY_PATH ${INFORMIXDIR}/lib:${INFORMIXDIR}/lib/esql
    endif
else if("${INFORMIXSERVER}" == "waldo") then
    if ("`/local/bin/hostname`" != "zygotix" ) then
      echo "WARNING: Not currently logged in to zygotix."
    endif
    # Set PATH variables and prompt using the standard variables
    # First check if PREINFORMIXPATH IS SET
    if (! $?PREINFORMIXPATH) then
        setenv PREINFORMIXPATH ${PATH}
    endif
    setenv PATH /private/bin:${INFORMIXDIR}/bin:/private/ZfinLinks/Commons/bin:${PREINFORMIXPATH}
    if ($?PREINFORMIX_LD_PATH) then
        setenv LD_LIBRARY_PATH ${PREINFORMIX_LD_PATH}:${INFORMIXDIR}/lib:${INFORMIXDIR}/lib/esql
    else
        setenv LD_LIBRARY_PATH ${INFORMIXDIR}/lib:${INFORMIXDIR}/lib/esql
    endif
    setenv SVNROOT svn+ssh://${USER}@${HOSTNAME}/research/zcentral/Vault/SVNROOT
else if("${INFORMIXSERVER}" == "whitebread") then
    if ("`/local/bin/hostname`" != "kinetix" ) then
      echo "WARNING: Not currently logged in to kinetix."
    endif
    # Set PATH variables and prompt using the standard variables
    # First check if PREINFORMIXPATH IS SET
    if (! $?PREINFORMIXPATH) then
        setenv PREINFORMIXPATH ${PATH}
    endif
    setenv PATH /private/bin:${INFORMIXDIR}/bin:/private/ZfinLinks/Commons/bin:${PREINFORMIXPATH}
    if ($?PREINFORMIX_LD_PATH) then
        setenv LD_LIBRARY_PATH ${PREINFORMIX_LD_PATH}:${INFORMIXDIR}/lib:${INFORMIXDIR}/lib/esql
    else
        setenv LD_LIBRARY_PATH ${INFORMIXDIR}/lib:${INFORMIXDIR}/lib/esql
    endif
    setenv SVNROOT svn+ssh://${USER}@${HOSTNAME}/research/zcentral/Vault/SVNROOT
else
    # Set PATH variables and prompt using the standard variables
    # First check if PREINFORMIXPATH IS SET
    if (! $?PREINFORMIXPATH) then
        setenv PREINFORMIXPATH ${PATH}
    endif
    setenv PATH /private/bin:${INFORMIXDIR}/bin:/private/ZfinLinks/Commons/bin:${PREINFORMIXPATH}
    if ($?PREINFORMIX_LD_PATH) then
        setenv LD_LIBRARY_PATH ${PREINFORMIX_LD_PATH}:${INFORMIXDIR}/lib:${INFORMIXDIR}/lib/esql
    else
        setenv LD_LIBRARY_PATH ${INFORMIXDIR}/lib:${INFORMIXDIR}/lib/esql
    endif
    setenv SVNROOT svn+ssh://${USER}@${HOSTNAME}/research/zcentral/Vault/SVNROOT
endif


setenv PATH /private/apps/groovy/bin:$PATH

# Prompt
test ${?prompt} -eq 1 && set prompt = "${MUTANT_NAME} %c2$Prompt"

if ($user == 'informix') then
  umask 022
endif

