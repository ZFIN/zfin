#!/local/bin/tcsh
#
# This script should be sourced to set several environment variables
# that are required by the ZFIN Makefiles.
#
# This script sets those variables for the embryonix zfin server
# (zfin.org when it is running on embryonix).
# 

# Get Informix environment variables.
umask 022
source /research/zcentral/Commons/env/wanda

# define Makefile environment variables.
setenv DBNAME zfindb
setenv DOMAIN_NAME zfin.org
setenv WEBDRIVER_LOC cgi-bin
setenv TARGETROOT /research/zcentral/www_homes/embryonix
setenv TARGETFTPROOT /research/zcentral/ftp
setenv TARGETCGIBIN cgi-bin
setenv TRANSLATETABLE /research/zcentral/Commons/env/embryonix.tt

#overwrite defaults from blast-default.env
setenv WEBHOST_KEY_PATH /research/zprod/shared_private_keys
setenv WEBHOST_FASTA_FILE_PATH /research/zblastfiles/files
setenv WEBHOST_BLAST_DATABASE_PATH /research/zblastdb/db/embryonixZfin
setenv BLASTSERVER_BLAST_DATABASE_PATH /private/blastdb
setenv BLASTSERVER_FASTA_FILE_PATH /common/data/BLAST_files
setenv BLASTSERVER_DISTRIBUTED_QUERY_PATH /common/scratch/zblast

source /private/ZfinLinks/Commons/env/wiki-default.env

#this is questionable; should it be embryonix?
setenv HOSTNAME helix.cs.uoregon.edu

# define Tomcat ports
setenv SHUTDOWNPORT 2007
setenv NON_SECUREPORT 2008
setenv SECUREPORT 8443

# Get Java/Tomcat defaults
# since no MUTANT_NAME is defined, do not use java-default.env
setenv CATALINA_HOME /private/apps/tomcat
setenv CATALINA_BASE /private/etc/tomcat/zfin.org
setenv CATALINA_PID "$CATALINA_BASE/catalina_pid"
setenv JAVA_HOME /private/apps/java

# standalone configuration
setenv INFORMIX_PORT 2002
setenv SQLHOSTS_HOST embryonix.cs.uoregon.edu
setenv INFORMIX_SERVER wanda

setenv SVNROOT file:///research/zcentral/Vault/SVNROOT

# define prompt
if ($?prompt) then
    if ($user != `whoami`) then
	set prompt = "ZFIN.ORG $user `whoami` %c1$Prompt"
    else
	set prompt = "ZFIN.ORG $user %c1$Prompt"
    endif
endif
