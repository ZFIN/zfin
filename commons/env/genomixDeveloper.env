#!/local/bin/tcsh

setenv DBNAME almdb
setenv MUTANT_NAME test
#define blast variable
source /private/ZfinLinks/Commons/env/blast-default.env
# script specific vars

#
# This script should be sourced to set several environment variables
# for the blast server.  This script should be sourced as a developer on
# genomix, rather than the production user.
# 
setenv HOSTNAME genomix.cs.uoregon.edu
setenv DOMAIN_NAME almost.zfin.org  # this is our reference domain

#change this to setenv HOSTDBSERVER zygotix.cs.uoregon.edu: for almost and genomix
setenv WEBHOST_HOSTNAME zygotix.cs.uoregon.edu
setenv WEBHOST_USER $USER
setenv WEBHOST_DBNAME almdb
setenv WEBHOST_SOURCE /private/ZfinLinks/Commons/env/wanda

# change this to /research/zprod/zCuratedBlstdbs/Current when we go to prod.
# testing (for almost and genomixDeveloper is embryonix.)
setenv WEBHOST_BLAST_DATABASE_PATH /research/zblastfiles/zmore/dev_blastdb

# this stays the same between servers and testers: it is the directory where
# /ZFIN_WWW/server_apps/data_transfer/BLAST scripts write.
setenv WEBHOST_FASTA_FILE_PATH /research/zblastfiles/dev_files
setenv WEBHOST_BINARY_PATH /private/apps/wublast
setenv WEBHOST_BLASTDB_CURL_PATH http://almost.zfin.org/blastdb

# genomix has a property called HOSTNAME, whereas zygotix and kinetix
# have a property called HOST.  Add this to be consistent between boxes.
# We use hostname in scripts to let us know whether we have to distribute
# blastdbs to each of genomix's nodes. Obviously we only do this when the 
# HOSTNAME is genomix.cs.uoregon.edu.

setenv BLASTSERVER_HOSTNAME genomix.cs.uoregon.edu

# blast env variables: these define the paths to blast processing directories,
# blast script deploy directories and production blast db directories. These
# change between test sites and production.

setenv BLASTSERVER_BLAST_DATABASE_PATH /zdevblast/dev_blastdb
setenv BLASTSERVER_FASTA_FILE_PATH /zdevblast/dev_BLAST_files
setenv BLASTSERVER_DISTRIBUTED_QUERY_PATH /common/scratch/dev_zblast

# figure out how to set this based on user.
#setenv BLAST_SCRIPT_DIR /zdevblast/dev_scripts
#setenv BLASTSCRIPT_TARGET_PATH /zdevblast/dev_scripts/target 


