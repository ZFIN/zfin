#!/local/bin/tcsh
#
# This script should be sourced to set several environment variables
# that are required by the ZFIN Makefiles.
#
# This script sets those variables for the manx virtual server.
# manx is used by Tim Mason to update ZIRC related pages.

# Get Informix environment variables.
source /research/zcentral/Commons/env/wanda

# define Makefile environment variables.
setenv DBNAME mnxdb
setenv DOMAIN_NAME manx.zfin.org
setenv MUTANT_NAME manx
setenv WEBDRIVER_LOC manx
setenv TARGETROOT /research/zcentral/www_homes/manx
setenv TARGETFTPROOT /research/zcentral/ftp/test/manx
setenv TARGETCGIBIN cgi-bin
setenv TRANSLATETABLE /research/zcentral/Commons/env/manx.tt

# define Tomcat ports
setenv SHUTDOWNPORT 9013
setenv NON_SECUREPORT 9113
setenv SECUREPORT 9213
setenv DEBUGPORT 9313


# Get Java/Tomcat defaults
source /research/zcentral/Commons/env/java-default.env

#define blast variable
source /private/ZfinLinks/Commons/env/blast-default.env

source /private/ZfinLinks/Commons/env/wiki-default.env
source /private/ZfinLinks/Commons/env/indexer-default.env

# script specific vars
# define prompt
test ${?prompt} -eq 1 && set prompt = "manx $user %c1$Prompt"
