

    <?MIVAR NAME=cit_G_select>
      select distinct p.title, 
      p.zdb_id, 
      year(p.pub_date) as pyear, 
      p.authors, 
      jrnl_abbrev, 
      case
        when p.pub_volume is not null
          then p.pub_volume || ':'
        else
          ''
      end,		 
      p.pub_pages,
      substr(pub_authors_lower,1,100) as authors_lower, 
      p.pub_date,
      recattrib_source_type,
      recattrib_data_zdb_id
    <?/MIVAR>
    