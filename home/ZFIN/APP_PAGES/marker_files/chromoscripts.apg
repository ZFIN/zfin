function view_map_java(selected_marker,map_panel,lg) {
 
if (!top.lglist) {
  top.lglist=new Array(25);
  top.lgindex=1;
  }
 
homewin=top;
newindex=homewin.lgindex;
 
      top.lgwin=open("/<!--|WEBDRIVER_PATH_FROM_ROOT|-->?MIval=aa-mapframe.apg&selected_marker=" + escape(selected_marker) + "&map_panel=" + map_panel + "&lg=" + lg + "&version=release" ,"mapwindow"+newindex,"scrollbars=no,resizable=no,width=610,height=435");
 
     top.lgwin.ztarget=window;
     top.lgwin.lghomewin=homewin;
 
     top.lglist[top.lgindex]=top.lgwin;
 
     homewin.lgindex++;
     top.lgwin.myindex=newindex;
 
}

</SCRIPT>

