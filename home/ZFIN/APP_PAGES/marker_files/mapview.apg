<HTML>

<!-- if mapping specific marker -->
<?MIBLOCK COND="$(NC,$marker,NULL)">
<?MISQL SQL="select target_id,target_abbrev,OR_lg,mname,mtype,abbrev from paneled_markers where zdb_id='$marker' and target_id='$panel_id';"><?/MISQL>

<?MIVAR NAME=$mname>$4<?/MIVAR>
<?MIVAR NAME=$panel_abbrev>$2<?/MIVAR>
<?MIVAR NAME=$OR_LG>$3<?/MIVAR>
<?MIVAR NAME=$mtype>$5<?/MIVAR>
<?MIVAR NAME=$abbrev>$6<?/MIVAR>
<?/MIBLOCK>

<?MIBLOCK COND="$(NC,$panel_id,NULL)">
<?MISQL SQL="select abbrev from panels where zdb_id='$panel_id';">
<?/MISQL>
<?MIVAR NAME=$panel_abbrev>$1<?/MIVAR>
<?/MIBLOCK>

<HEAD>
<SCRIPT>

function makelist () {
var showlist="'dummy',";
var tarry=document.lgselect.mtypes;
var counter=tarry.length;
if (counter!=null) {
  for (i=0;i<counter;i++) {
       if (tarry[i].checked) {
          showlist="'"+tarry[i].value+"',"+showlist;
       } 
   }
} else {
   if (tarry.checked) {
          showlist="'"+tarry.value+"',"+showlist;
   }
}
 if (showlist.length>0) {showlist=showlist.substring(0,showlist.length-1);}
 showlist="("+showlist+")";
 return escape(showlist);
}

<?MIVAR>
function redisplay () {     
top.helpcontent.location="/ZDBB/misc_html/saycomposing.html";
top.helpcontent.location="/cgi-bin_B/webdriver?MIval=aa-make_map.apg&marker=$marker&showlist="+makelist()+"&refcross=$panel_id&OR_LG=$OR_LG";

}
<?/MIVAR>
</SCRIPT>
</HEAD>


<BODY bgcolor="#ffffb9">
<basefont size=2>
<form name=lgselect method=post>


<?MIVAR>
<TABLE width=100%>
<TR>
<TD><font size=3><b><a href="javascript:top.lghomewin.content.location='/cgi-bin_B/webdriver?MIval=aa-crossview.apg&OID=$panel_id';top.lghomewin.content.focus();">$panel_abbrev Panel</A>; LG $OR_LG </B>
</TD>
<TD align=right><font size=2><input type=button value="Close" onClick="parent.close();"> </TD>
</TR>
</TABLE>
<?/MIVAR>

<?MIBLOCK COND="$(NC,$marker,NULL)">
<?MIVAR>
<hr width=90%>
<center><font size=5>
$mtype: <b>$abbrev</b>
</font>
$(IF,$(EC,$mtype,GENE),"<br>"$mname)
</center>
<?/MIVAR>
<?/MIBLOCK>

<hr width=90%>

<b>Include following marker types:</b>
<?MIVAR NAME=$count>1<?/MIVAR>
<TABLE WIDTH=100% border=0 cellspacing=0>
<TR>
<?MISQL SQL="select distinct marker_type from mapped_marker where refcross_id='$panel_id' and OR_lg='$OR_LG' and marker_type is not null;">
<TD><font size=2><input name=mtypes value="$1" type=checkbox CHECKED onClick="redisplay();"> $1</TD>
$(IF,$(=,$count,3),"</TR><TR>")
$(SETVAR,$count,$(+,$count,1))
<?/MISQL>
</TR>
</TABLE>

</form>


<script>redisplay();   </script>


</HTML>

