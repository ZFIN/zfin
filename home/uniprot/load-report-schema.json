{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "required": ["title", "accession", "details", "type"],
        "properties": {
            "title": {
                "type": "string"
            },
            "accession": {
                "type": "string"
            },
            "details": {
                "type": "string"
            },
            "type": {
                "type": "string",
                "enum": ["LOAD", "ERROR"]
            },
            "links": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "string",
                            "description": "The title of the link."
                        },
                        "href": {
                            "type": "string",
                            "description": "The URL for the link.",
                            "format": "uri"
                        }
                    },
                    "required": [
                        "title",
                        "href"
                    ]
                }
            }
        }
    }
}
