<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
        "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<!--
  - Application context definitions for the site wide framework presentation stuff
  -->
<beans>

    <bean id="frameworkUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/login">login</prop>
                <prop key="/login-redirect">login</prop>
                <prop key="/autocomplete/gene-family">autoComplete</prop>
                <prop key="/http-redirect/">httpRedirect</prop>
                <prop key="/pagination">pagination</prop>
                <prop key="/def-pub">defPub</prop>
                <prop key="/ajax/login-required">ajaxLoginRequired</prop>
                <prop key="/audit-log/details">auditLogDetails</prop>
            </props>
        </property>

    </bean>

    <bean name="login" class="org.zfin.framework.presentation.LoginController"/>
    <bean name="pagination" class="org.zfin.framework.presentation.PaginationController"/>
    <bean name="defPub" class="org.zfin.framework.presentation.DefPubController"/>
    <bean name="httpRedirect" class="org.zfin.framework.presentation.RedirectController"/>
    <bean name="ajaxLoginRequired" class="org.springframework.web.servlet.mvc.UrlFilenameViewController"/>
    <bean name="autoComplete" class="org.zfin.framework.presentation.AutoCompleteController">
        <property name="methodNameResolver" ref="autoCompleteResolver"/>
    </bean>

    <bean id="autoCompleteResolver" class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="/autocomplete/gene-family">geneFamilyHandler</prop>
                <prop key="/autocomplete/anatomy-term">anatomyTermHandler</prop>
            </props>
         </property>
    </bean>

    <bean name="auditLogDetails" class="org.zfin.audit.presentation.DetailsController" autowire="byName"/>
     
</beans>
