<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <definition name="profile/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/people/{1}.jsp" />
    </definition>

    <definition name="edit-user-password.page" extends="main_layout">
        <put-attribute name="staticTitle" value="Edit ZFIN User" />
        <put-attribute name="body" value="/WEB-INF/jsp/people/edit_user_password.jsp"/>
    </definition>

    <definition name="edit-user-password-confirmation.page" extends="main_layout">
        <put-attribute name="staticTitle" value="Edit ZFIN User Confirmation" />
        <put-attribute name="body" value="/WEB-INF/jsp/people/edit_user_password_confirmation.jsp"/>
    </definition>

    <definition name="delete-user-password-confirmation.page" extends="main_layout">
        <put-attribute name="staticTitle" value="Delete ZFIN User Confirmation" />
        <put-attribute name="body" value="/WEB-INF/jsp/people/delete_user_confirmation.jsp"/>
    </definition>

</tiles-definitions>

