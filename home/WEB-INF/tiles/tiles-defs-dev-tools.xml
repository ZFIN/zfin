<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <definition name="error-page" extends="main_layout">
        <put-attribute name="staticTitle" value="Error Page"/>
        <put-attribute name="body" value="/WEB-INF/jsp/error-page.jsp"/>
    </definition>

    <definition name="unload/*.page" extends="main_layout">
        <put-attribute name="staticTitle" value="Downloads Archive: "/>
        <put-attribute name="body" value="/WEB-INF/jsp/unload/{1}.jsp"/>
    </definition>

    <definition name="unload/view-download-file" template="/WEB-INF/jsp/unload/view-download-file.jsp">
    </definition>

    <definition name="unload/*.ajax-page" extends="popup_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/unload/{1}.jsp"/>
    </definition>

</tiles-definitions>

