<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <definition name="expression/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/expression/{1}.jsp"/>
    </definition>

    <definition name="expression/*.insert" template="/WEB-INF/jsp/expression/{1}.jsp"/>

    <definition name="expression/*.popup" extends="popup_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/expression/{1}.jsp"/>
    </definition>

</tiles-definitions>
