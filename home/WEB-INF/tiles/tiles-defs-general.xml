<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <!--wiki definitions-->
    <definition name="wiki/*.insert" template="/WEB-INF/jsp/wiki/{1}.jsp"/>

    <definition name="wiki/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/wiki/{1}.jsp"/>
    </definition>

    <definition name="*.jsp" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/{1}.jsp"/>
    </definition>

    <!--marker definitions-->
    <definition name="marker/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/marker/{1}.jsp"/>
    </definition>

    <definition name="antibody/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/antibody/{1}.jsp"/>
    </definition>

    <definition name="anatomy/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/anatomy/{1}.jsp"/>
    </definition>

    <definition name="database/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/dev-tools/{1}.jsp"/>
    </definition>

    <definition name="database/*.popup" extends="popup_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/dev-tools/{1}.jsp"/>
    </definition>

    <definition name="marker/*.insert" template="/WEB-INF/jsp/marker/{1}.jsp"/>

    <!--feature definitions-->
    <definition name="feature/*.page" extends="main_layout">
        <put-attribute name="staticTitle" value="Feature: "/>
        <put-attribute name="body" value="/WEB-INF/jsp/feature/{1}.jsp"/>
    </definition>

    <definition name="dev-tools/*.page" extends="dev_layout">
        <put-attribute name="staticTitle" value="Application Context"/>
        <put-attribute name="body" value="/WEB-INF/jsp/dev-tools/{1}.jsp"/>
    </definition>

    <definition name="feature/wildtype-lines.page" extends="main_layout">
        <put-attribute name="staticTitle" value="ZFIN: Wild-Type Lines: Summary Listing"/>
        <put-attribute name="body" value="/WEB-INF/jsp/feature/wildtype-lines.jsp"/>
    </definition>

    <definition name="feature/*.insert" template="/WEB-INF/jsp/feature/{1}.jsp"/>
    <definition name="anatomy/*.ajax" template="/WEB-INF/jsp/anatomy/{1}.jsp"/>

    <!--genotype definitions-->
    <definition name="genotype/*.page" extends="main_layout">
        <put-attribute name="staticTitle" value="Genotype: "/>
        <put-attribute name="body" value="/WEB-INF/jsp/feature/{1}.jsp"/>
    </definition>

    <definition name="site-search.page" extends="main_layout">
        <put-attribute name="staticTitle" value="ZFIN: Site Search: "/>
        <put-attribute name="body" value="/WEB-INF/jsp/quicksearch/category-search.jsp"/>
    </definition>

    <!--fish definitions-->
    <definition name="fish/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/fish/{1}.jsp"/>
    </definition>

    <definition name="dev-tools/database/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/dev-tools/database/{1}.jsp"/>
    </definition>

    <definition name="fish/*.insert" template="/WEB-INF/jsp/fish/{1}.jsp"/>

    <!-- profile defintions -->
    <definition name="profile/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/profile/{1}.jsp" />
    </definition>


    <!-- profile defintions -->
    <definition name="profile/*.print" template="/WEB-INF/jsp/profile/{1}.jsp"/>
    <definition name="profile/*.insert" template="/WEB-INF/jsp/profile/{1}.jsp"/>

    <!-- reno defintions -->
    <definition name="reno/*.page" extends="main_layout">
        <put-attribute name="staticTitle" value="ZFIN ReNo" />
        <put-attribute name="body" value="/WEB-INF/jsp/reno/{1}.jsp"/>
    </definition>

    <definition name="mutant/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/mutant/{1}.jsp" />
    </definition>

</tiles-definitions>

