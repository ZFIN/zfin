<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

    <definition name="*.jsp" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/{1}.jsp"/>
    </definition>

    <definition name="database/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/dev-tools/{1}.jsp"/>
    </definition>

    <definition name="database/*.popup" extends="popup_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/dev-tools/{1}.jsp"/>
    </definition>

    <definition name="dev-tools/*.page" extends="dev_layout">
        <put-attribute name="staticTitle" value="Application Context"/>
        <put-attribute name="body" value="/WEB-INF/jsp/dev-tools/{1}.jsp"/>
    </definition>

    <definition name="dev-tools/gwt/*.page" extends="dev_layout">
        <put-attribute name="staticTitle" value="GWT Modules"/>
        <put-attribute name="body" value="/WEB-INF/jsp/dev-tools/gwt/{1}.jsp"/>
    </definition>

    <definition name="search/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/search/{1}.jsp"/>
    </definition>

    <definition name="search/*.popup" extends="popup_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/search/{1}.jsp"/>
    </definition>

    <!--fish definitions-->
    <definition name="fish/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/fish/{1}.jsp"/>
    </definition>

    <definition name="mapping/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/mapping/{1}.jsp"/>
    </definition>

    <definition name="dev-tools/database/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/dev-tools/database/{1}.jsp"/>
    </definition>

    <definition name="fish/*.insert" template="/WEB-INF/jsp/fish/{1}.jsp"/>

    <!-- profile defintions -->
    <definition name="profile/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/profile/{1}.jsp" />
    </definition>


    <!-- profile defintions -->
    <definition name="profile/*.print" template="/WEB-INF/jsp/profile/{1}.jsp"/>
    <definition name="profile/*.insert" template="/WEB-INF/jsp/profile/{1}.jsp"/>

    <!-- reno defintions -->
    <definition name="reno/*.page" extends="main_layout">
        <put-attribute name="staticTitle" value="ZFIN ReNo" />
        <put-attribute name="body" value="/WEB-INF/jsp/reno/{1}.jsp"/>
    </definition>

    <definition name="mutant/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/mutant/{1}.jsp" />
    </definition>

    <!-- figure definitions -->
    <definition name="figure/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/figure/{1}.jsp"/>
    </definition>

    <!-- Using popup_layout rather than creating a fragment_layout, since both cases just need a plain layout -->
    <definition name="figure/*.fragment" extends="popup_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/figure/{1}.jsp"/>
    </definition>

    <!-- figure definitions -->
    <definition name="image/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/figure/image/{1}.jsp"/>
    </definition>

    <!-- nomenclature -->
    <definition name="nomenclature/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/nomenclature/{1}.jsp" />
    </definition>

    <!-- gbrowse -->
    <definition name="gbrowse/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/gbrowse/{1}.jsp" />
    </definition>

    <definition name="zebrashare/*.page" extends="main_layout">
        <put-attribute name="body" value="/WEB-INF/jsp/zebrashare/{1}.jsp" />
    </definition>

    <definition name="zf_info/*" template="/WEB-INF/jsp/zf_info/{1}.jsp"/>

</tiles-definitions>
