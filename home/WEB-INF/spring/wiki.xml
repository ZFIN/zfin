<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="wikiUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/wiki/wikiLink">wikiLink</prop>
            </props>
        </property>
    </bean>

    <bean name="wikiLink" class="org.zfin.wiki.presentation.WikiLinkController">
        <property name="commandName" value="formBean"/>
        <property name="commandClass" value="org.zfin.wiki.presentation.WikiBean"/>
    </bean>

</beans>