<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--  URL mappings -->
    <bean id="developerUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/dev-tools/home">devToolsHomePage</prop>
                <prop key="/dev-tools/database-info">devToolsDatabaseInfo</prop>
                <prop key="/dev-tools/jdbc-driver-info">devToolsDatabaseInfo</prop>
                <prop key="/dev-tools/java-properties">devToolsDatabaseInfo</prop>
                <prop key="/dev-tools/thread-info">devToolsDatabaseInfo</prop>
                <prop key="/dev-tools/zfin-properties">devToolsDatabaseInfo</prop>
                <prop key="/dev-tools/log4j-configuration">log4jConfiguration</prop>
                <prop key="/dev-tools/classpath-info">classpathInfo</prop>
                <prop key="/dev-tools/file-content">displayFileContent</prop>
                <prop key="/dev-tools/test-browser">devToolsDatabaseInfo</prop>
                <prop key="/dev-tools/view-session-info">devToolsDatabaseInfo</prop>
                <prop key="/dev-tools/view-global-session-info">globalSession</prop>
                <prop key="/dev-tools/view-hibernate-info">devToolsDatabaseInfo</prop>
                <prop key="/dev-tools/view-hibernate-statistics">hibernateStistics</prop>
                <prop key="/dev-tools/servlet-context">servletContext</prop>
                <prop key="/dev-tools/application-context">applicationContext</prop>
                <prop key="/dev-tools/view-user-request-tracks">userRequestTrack</prop>
                <prop key="/dev-tools/view-single-user-request-tracking">singleUserRequestTrack</prop>
                <prop key="/dev-tools/zfin-statistics">zfinStatistics</prop>
                <prop key="/dev-tools/gwt/modules">gwtModules</prop>
                <prop key="/dev-tools/gwt/fx-curation">fxCuration</prop>
                <prop key="/dev-tools/gwt/image-edit-test">imageEditTest</prop>
                <prop key="/dev-tools/gwt/phenotype-curation">phenotypeCuration</prop>
                <prop key="/dev-tools/gwt/go-curation">goCuration</prop>
                <prop key="/dev-tools/gwt/lookup">lookup</prop>
                <prop key="/dev-tools/gwt/lookup-table">lookupTable</prop>
                <prop key="/dev-tools/gwt/transcript-edit">transcriptEdit</prop>
                <prop key="/dev-tools/gwt/clone-edit">cloneEdit</prop>
                <prop key="/dev-tools/gwt/antibody-edit">antibodyEdit</prop>
                <prop key="/dev-tools/gwt/gene-edit">geneEdit</prop>
                <prop key="/dev-tools/gwt/alternate-gene-edit">alternateGeneEdit</prop>
                <prop key="/dev-tools/gwt/go-edit">goEdit</prop>
                <prop key="/dev-tools/gwt/go-add">goAdd</prop>
                <prop key="/dev-tools/gwt/go-clone">goClone</prop>
                <prop key="/dev-tools/gwt/curation-base">curationBase</prop>
                <prop key="/dev-tools/gwt/test-composite">testComposite</prop>
                <prop key="/dev-tools/svn-version">devToolsDatabaseInfo</prop>
                <prop key="/dev-tools/display-groups">displayGroups</prop>
                <prop key="/dev-tools/second-level-cache">cacheHandler</prop>
                <prop key="/dev-tools/blastable-databases">blastableDatabases</prop>
                <prop key="/dev-tools/quartz-jobs">quartzJobs</prop>
                <prop key="/dev-tools/blast-jobs">blastQueue</prop>
                <prop key="/dev-tools/test-error-page">errorPageHandler</prop>
                <prop key="/dev-tools/ontology/summary">ontologyCaching</prop>
                <prop key="/ontology/terms">ontologyTerms</prop>
                <prop key="/ontology/term-detail">ontologyTerm</prop>
                <prop key="/dev-tools/zfin-properties">zfinProperties</prop>
                <prop key="/dev-tools/ontology-reports">ontologyReports</prop>
            </props>
        </property>
    </bean>

    <bean name="cacheHandler" class="org.zfin.framework.presentation.CacheController"/>
    <!-- Make sure to use scope=prototype to instantiate a new object to make the call thread-safe!-->
    <bean name="gwtModules" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="gwt-modules"/>
    </bean>

    <bean name="globalSession" class="org.zfin.framework.presentation.GlobalSessionViewController" >
        <property name="commandClass" value="org.zfin.framework.presentation.GlobalSessionBean"/>
        <property name="zfinGlobalSessionBean" ref="zfinGlobalSessionBean"/>
    </bean>

    <bean name="fxCuration" class="org.zfin.framework.presentation.CurationTestController" scope="prototype">
        <property name="viewName" value="fx-curation"/>
    </bean>

    <bean name="phenotypeCuration" class="org.zfin.framework.presentation.CurationTestController" scope="prototype">
        <property name="viewName" value="phenotype-curation"/>
    </bean>

    <bean name="goCuration" class="org.zfin.framework.presentation.CurationTestController" scope="prototype">
        <property name="viewName" value="go-curation"/>
    </bean>

    <bean name="ontologyCaching" class="org.zfin.ontology.presentation.OntologyManagerController" scope="prototype">
        <property name="viewName" value="ontology-manager"/>
    </bean>

    <bean name="ontologyTerms" class="org.zfin.ontology.presentation.OntologyTermController" scope="prototype">
        <property name="viewName" value="ontology-terms"/>
    </bean>

    <bean name="ontologyTerm" class="org.zfin.ontology.presentation.OntologyTermController" scope="prototype">
        <property name="viewName" value="ontology-term"/>
    </bean>

    <bean name="ontologyReports" class="org.zfin.ontology.presentation.OntologyReportController" scope="prototype">
        <property name="viewName" value="ontology-reports"/>
    </bean>

    <bean name="imageEditTest" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="image-edit-test"/>
    </bean>

    <bean name="lookup" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="lookup"/>
    </bean>

    <bean name="lookupTable" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="lookup-table"/>
    </bean>

    <bean name="transcriptEdit" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="transcript-edit"/>
    </bean>

    <bean name="cloneEdit" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="clone-edit"/>
    </bean>

    <bean name="goEdit" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="go-edit"/>
    </bean>

    <bean name="goAdd" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="go-add"/>
    </bean>

    <bean name="goClone" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="go-clone"/>
    </bean>

    <bean name="curationBase" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="curation-base"/>
    </bean>

    <bean name="antibodyEdit" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="antibody-edit"/>
    </bean>

    <bean name="geneEdit" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="gene-edit"/>
    </bean>

    <bean name="alternateGeneEdit" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="alternate-gene-edit"/>
    </bean>

    <bean name="testComposite" class="org.zfin.framework.presentation.SimplePassThroughController" scope="prototype">
        <property name="viewName" value="test-composite"/>
    </bean>

    <bean name="log4jConfiguration" class="org.zfin.framework.presentation.Log4jConfigurationController"/>

    <bean name="classpathInfo" class="org.zfin.framework.presentation.ClasspathInfoController"/>

    <bean name="devToolsHomePage" class="org.zfin.framework.presentation.HomeController"/>

    <bean name="displayFileContent" class="org.zfin.framework.presentation.FileContentController"/>

    <bean name="servletContext" class="org.zfin.framework.presentation.ServletContextController"/>

    <bean name="applicationContext" class="org.zfin.framework.presentation.ApplicationContextController"/>

    <bean name="userRequestTrack" class="org.zfin.framework.presentation.UserRequestTrackController"/>

    <bean name="singleUserRequestTrack" class="org.zfin.framework.presentation.SingleUserRequestTrackController"/>

    <bean name="hibernateStistics" class="org.zfin.framework.presentation.HibernateStatisticsController"/>

    <bean name="zfinStatistics" class="org.zfin.framework.presentation.ZfinStatisticsController"/>

    <bean name="devToolsDatabaseInfo" class="org.zfin.framework.presentation.DatabaseInfoController">
        <property name="methodNameResolver" ref="devToolsResolver"/>
    </bean>

    <bean name="displayGroups" class="org.zfin.framework.presentation.DisplayGroupController"/>

    <bean name="blastQueue" class="org.zfin.sequence.blast.presentation.BlastJobsController">
        <property name="commandName" value="formBean"/>
        <property name="commandClass" value="org.zfin.sequence.blast.presentation.BlastJobsBean"/>
    </bean>

    <bean name="quartzJobs" class="org.zfin.framework.presentation.QuartzJobsController">
        <property name="commandName" value="formBean"/>
        <property name="commandClass" value="org.zfin.framework.presentation.QuartzJobsBean"/>
        <property name="scheduler" ref="scheduler"/>
    </bean>


    <bean name="zfinProperties" class="org.zfin.properties.presentation.ZfinPropertiesController" scope="prototype">
        <property name="commandName" value="formBean"/>
        <property name="commandClass" value="java.util.TreeMap"/>
        <property name="view" value="zfin-properties.page"/>
    </bean>

    <bean name="blastableDatabases" class="org.zfin.framework.presentation.BlastableDatabasesController"/>

    <bean name="errorPageHandler" class="org.zfin.framework.presentation.TestErrorPageController">
        <property name="formView" value="create-error.page"/>
        <property name="successView" value="no-error.page"/>
        <property name="commandClass" value="java.lang.Object"/>
        <property name="commandName" value="formBean"/>
    </bean>

    <!--
    - This bean is a MethodNameResolver definition for a MultiActionController.
    - It maps URLs to methods for the "devToolsDatabaseInfo" bean.
    -->
    <bean id="devToolsResolver" class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="/dev-tools/database-info">databaseInfoHandler</prop>
                <prop key="/dev-tools/jdbc-driver-info">jdbcDriverHandler</prop>
                <prop key="/dev-tools/java-properties">javaPropertiesHandler</prop>
                <prop key="/dev-tools/thread-info">threadInfoHandler</prop>
                <prop key="/dev-tools/test-browser">testBrowserHandler</prop>
                <prop key="/dev-tools/view-session-info">viewSessionInfoHandler</prop>
                <prop key="/dev-tools/view-hibernate-info">viewHibernateInfoHandler</prop>
                <prop key="/dev-tools/svn-version">svnVersionHandler</prop>
            </props>
        </property>
    </bean>

</beans>
