<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--  URL mappings -->
    <bean id="orhtologyUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/orthology/search">orthologySearch</prop>
                <prop key="/orthology/update-note">orthologyNoteUpdate</prop>
            </props>
        </property>
    </bean>

    <bean name="orthologySearch" class="org.zfin.orthology.presentation.OrthologySearchController">
        <property name="orthologyRepository" ref="orthologyRepository"/>
        <property name="formView" value="orthology-search.page"/>
        <property name="successView" value="orthology-searchresult.page"/>
        <property name="sessionForm" value="true"/>
        <property name="bindOnNewForm" value="true"/>
        <property name="validator">
            <bean class="org.zfin.orthology.presentation.OrthologyWebSearchFormValidator"/>
        </property>
    </bean>

    <bean name="orthologyNoteUpdate" class="org.zfin.orthology.presentation.OrthologyNoteController" >
      <property name="commandClass" value="org.zfin.marker.presentation.OrthologyNoteBean" />
        <property name="formView" value="create-note.page" />
        <property name="bindOnNewForm" value="true" />
    </bean>
    <!-- Designates to use the repository using hibernate -->
    <bean id="orthologyRepository" class="org.zfin.orthology.repository.HibernateOrthologyRepository"/>
</beans>
