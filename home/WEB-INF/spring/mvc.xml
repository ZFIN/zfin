<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       ">

    <import resource="anatomy.xml"/>
    <import resource="antibody.xml"/>
    <!--<import resource="reno.xml"/>-->
    <import resource="developer-tools.xml"/>
    <import resource="blast.xml"/>
    <import resource="orthology.xml"/>
    <import resource="profile.xml"/>
    <import resource="publication.xml"/>


    <!--have to wait until the end to do these as they all will be mapped to their context / -->
    <import resource="webdriver.xml"/>
    <import resource="framework.xml"/>
    <import resource="quicksearch.xml"/>
    <import resource="mapper.xml"/>


    <bean id="exceptionResolver" class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
        <property name="exceptionMappings">
            <props>
                <prop key="java.lang.Exception">error-page</prop>
            </props>
        </property>
    </bean>

    <bean id="zfinMailSender" class="org.zfin.framework.mail.IntegratedJavaMailSender">
        <property name="mailHost" value="mailhost.cs.uoregon.edu&quot;"/>
        <property name="mailSender">
            <bean id="mailSenderImpl" class="org.springframework.mail.javamail.JavaMailSenderImpl"/>
        </property>
    </bean>


</beans>