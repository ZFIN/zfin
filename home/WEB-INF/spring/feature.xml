<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="featureUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
               <prop key="/feature/detail">detailFeature</prop>
               <prop key="/genotype/detail">detailGenotype</prop>
               <prop key="/genotype/show_all_phenotype">allPhenotypeGenotype</prop>
            </props>
        </property>
    </bean>
    <bean name="detailFeature" class="org.zfin.feature.presentation.FeatureDetailController"/>
    <bean name="detailGenotype" class="org.zfin.feature.presentation.GenotypeDetailController"/>
    <bean name="allPhenotypeGenotype" class="org.zfin.feature.presentation.AllPhenotypeController"/>

</beans>