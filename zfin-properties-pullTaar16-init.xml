<?xml version="1.0" encoding="ISO-8859-1"?>

<ApplicationProperties xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="home/WEB-INF/conf/properties.xsd">
    <Web>
        <backgroundColor>#2244</backgroundColor>
        <headerColor>#7357</headerColor>
        <highlightColor>#4437</highlightColor>
        <highlighterColor>#7743</highlighterColor>
        <linkbarColor>#9980</linkbarColor>
        <sidebarColor>#2234</sidebarColor>
        <domain>@DOMAIN@</domain>
    </Web>
    <Wiki>
        <username>@WIKI_USERNAME@</username>
        <password>@WIKI_PASSWORD@</password>
        <hostname>@WIKI_HOSTNAME@</hostname>
        <pushToWiki>@WIKI_PUSH_TO_WIKI@</pushToWiki>
    </Wiki>
    <Path>
        <Server name="localhost" port="8080" securePort="8443"/>
        <cookiePath>cgi-bin_frost</cookiePath>
        <Webdriver>cgi-bin/webdriver</Webdriver>
        <FtpRootPath>/ftp/zfin</FtpRootPath>
        <imageLoadPath>/image/load</imageLoadPath>
        <loadUpFull>/image/full</loadUpFull>
        <PdfPath>/pdf/</PdfPath>
        <IndexPath>/werter</IndexPath>
    </Path>
    <Blast>
        <WebHost>
            <DatabasePath>@WEBHOST_BLAST_DATABASE_PATH@</DatabasePath>
            <GetBinary>@WEBHOST_XDGET@</GetBinary>
            <PutBinary>@WEBHOST_XDFORMAT@</PutBinary>
            <User>@WEBHOST_USER@</User>
            <HostName>@WEBHOST_HOSTNAME@</HostName>
            <BinaryPath>@WEBHOST_BINARY_PATH@</BinaryPath>
        </WebHost>
        <BlastServer>
            <DatabasePath>@BLASTSERVER_BLAST_DATABASE_PATH@</DatabasePath>
            <GetBinary>@BLASTSERVER_XDGET@</GetBinary>
            <PutBinary>@BLASTSERVER_XDFORMAT@</PutBinary>
            <User>@BLASTSERVER_USER@</User>
            <HostName>@BLASTSERVER_HOSTNAME@</HostName>
            <BinaryPath>@BLASTSERVER_BINARY_PATH@</BinaryPath>
        </BlastServer>
        <Target>@BLASTSCRIPT_TARGET_PATH@</Target>
        <DistributedQueryPath>@BLASTSERVER_DISTRIBUTED_QUERY_PATH@</DistributedQueryPath>
        <KeyPath>@WEBHOST_KEY_PATH@</KeyPath>
    </Blast>
    <Email>
        <adminEmailAddress>zfin@zfin.org</adminEmailAddress>
        <validationEmailOther>zfin@zfin.org</validationEmailOther>
        <requestNewAnatomyTerm>zfin@zfin.org</requestNewAnatomyTerm>
        <ln54Contact>zfin@zfin.org</ln54Contact>
    </Email>
    <Logging>
        <logFileName>zfin_logger.log</logFileName>
        <logFileSize>1</logFileSize>
        <MaxLogFiles>10</MaxLogFiles>
        <logPattern>%d [%t] %-5p %c{2} - %m%n</logPattern>
    </Logging>
</ApplicationProperties>
